server {
  listen {{ motorcade_nginx_container_http }};
  server_name {{ item.server_name }};

  location /healthz { access_log off; return 200 "ok\n"; add_header Content-Type text/plain; }
  location / { return 301 https://$host$request_uri; }
}

server {
  listen {{ motorcade_nginx_container_https }} ssl;
  server_name {{ item.server_name }};
  {% set leadgen_site_name = motorcade_domains.site | default('motorcade.vip') %}

  ssl_certificate     /etc/nginx/certs/{{ item.cert_name | default(item.server_name) }}.crt;
  ssl_certificate_key /etc/nginx/certs/{{ item.cert_name | default(item.server_name) }}.key;

  include /etc/nginx/snippets/ssl_params.conf;
  include /etc/nginx/snippets/security_headers.conf;

  location /healthz { access_log off; return 200 "ok\n"; add_header Content-Type text/plain; }
  {% if item.server_name == leadgen_site_name %}
  location = {{ leadgen_intake_public_path | default('/api/lead-intake') }} {
    limit_except POST { return 405; }

    include /run/motorcade/nginx/leadgen_headers.conf;

    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://{{ leadgen_host | default('127.0.0.1') }}:{{ leadgen_port | default(8080) }}{{ leadgen_intake_internal_path | default('/lead/intake') }};
  }
  {% endif %}
  {% if item.kind | default('static') == 'proxy' %}
  location / {
    proxy_pass {{ item.upstream }};
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_read_timeout 60s;
    proxy_send_timeout 60s;
  }
  {% else %}
  {% if item.server_name == 'motorcade.vip' and (motorcade_nginx_static_root | default('') | length > 0) %}
  root {{ motorcade_nginx_static_root }}/current;
  index index.html;
  location / { try_files $uri $uri/ /index.html =404; }
  {% elif item.root is defined and item.root | length > 0 %}
  root {{ item.root }};
  location / { try_files $uri $uri/ =404; }
  {% else %}
  location / { return 404; }
  {% endif %}
  {% endif %}
}
